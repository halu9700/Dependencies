+
+#if (PHAPP_VERSION_BUILD == 0)
+#define TWO_DIGIT_VER   1
+#else
+#define THREE_DIGIT_VER 1
+#endif
+
+#define DO_MAKE_STR(x) #x
+#define MAKE_STR(x)    DO_MAKE_STR(x)
+
